			.col.s4
				a.btn-block.btn-flat.blue.lighten-5.blue-text Cancelar
		.row
			.col.s4
				a.btn-block.btn-flat.blue.lighten-5.blue-text Devolver
			.col.s4
				a.btn-block.btn-flat.blue.lighten-5.blue-text Retornar
			.col.s4
				a.btn-block.btn-flat.blue.lighten-5.blue-text Ver financeiro

mixin linhaAberto(tipo, valor)
	tr.sidenav-trigger(href='#', data-target='detalhes')
		td(width='60')
			label
				input.filled-in(type='checkbox')
				span
		td(width='40')
			.status.edicao.circle
				i.material-icons edit
		td
			span.grey-text Cliente não informado
		td(width='80').center-align.grey-text= tipo
		td(width='120').right-align= valor
		td(width='80').right-align
		td(width='120').right-align
			i.material-icons edit

mixin linhaCritica(cliente, tipo, valor)
	tr.sidenav-trigger(href='#', data-target='detalhes')
		td(width='60')
			label
				input.filled-in(type='checkbox')
				span
		td(width='40')
			.status.atencao.circle
				i.material-icons priority_high
		td= cliente
		td(width='80').center-align.grey-text= tipo
		td(width='120').right-align= valor
		td(width='80').right-align
		td(width='120').right-align
			i.material-icons edit

mixin linhaAutorizado(cliente, tipo, valor, numero)
	tr.sidenav-trigger(href='#', data-target='detalhes')
		td(width='60')
			label
				input.filled-in(type='checkbox')
				span
		td(width='40')
			.status.sucesso.circle
				i.material-icons done
		td= cliente
		td(width='80').center-align.grey-text= tipo
		td(width='120').right-align= valor
		td(width='80').right-align= numero
		td(width='120').right-align
			a(href='#') PDF
			a(href='#') XML

