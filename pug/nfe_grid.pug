	#detalhes.sidenav(style='width: 600px;')
		h5
			| Núcleo Indústria Têxtil Ltda
			.chip.numero NF 1174

		.section
			.row
				.col.s6
					label CNPJ
					div 03.265.874/0001-69 
				.col.s6
					label Natureza da operação
					div Venda

		.section
			table
				thead
					tr
						th Produto
						th.right-align Valor (R$)
				tbody
					tr
						td
							| Caneta esferográfica 
							label.grey-text (1 UN x 5,50)
						td.right-align 5,50
					tr
						td
							| Lápis 
							label.grey-text (5 UN x 1,50)
						td.right-align 7,50
				tfoot
					tr
						td(colspan='2')
							h5.right-align
								small 13,00

		.acoes-detalhes
			.row(style='margin-bottom:1rem;').hide
				.col.s4
					a.btn-block.btn-flat.blue.lighten-5.blue-text Emitir
