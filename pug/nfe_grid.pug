					a.btn-block.btn-flat.blue.lighten-5.blue-text Retornar
				.col.s4
					a.btn-block.btn-flat.blue.lighten-5.blue-text Ver financeiro

mixin linhaAberto(tipo, valor)
	tr.sidenav-trigger(href='#', data-target='detalhes')
		+colunaCheckbox()
		+colunaAberto()
		td.grey-text Cliente não informado
		td.col-tipo
			label.tipo= tipo
		td.col-valor= valor
		td.col-numero
		+colunaAcoes()

mixin linhaCritica(cliente, tipo, valor)
	tr.sidenav-trigger(href='#', data-target='detalhes')
		+colunaCheckbox()
		+colunaCritica()
		td= cliente
		td.col-tipo
			label.tipo= tipo
		td.col-valor= valor
		td.col-numero
		+colunaAcoes()

mixin linhaAutorizado(cliente, tipo, valor, numero)
	tr.sidenav-trigger(href='#', data-target='detalhes')
		+colunaCheckbox()
		+colunaAutorizado()
		td= cliente
		td.col-tipo
			label.tipo= tipo
		td.col-valor= valor
		td.col-numero= numero
		+colunaDownload()

